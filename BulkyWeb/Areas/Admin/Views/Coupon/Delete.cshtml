@model Coupon

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Coupon</h2>
            </div>

        </div>

    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3">
               

                <div class="form-floating py-2 col-12">
                    <input asp-for="CouponCode" class="form-control border-0 shadow" />
                    <label asp-for="CouponCode" class="ms-2">Coupon Name</label>

                  
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ValidToDate" class="form-control border-0 shadow" />
                    <label asp-for="ValidToDate" class="ms-2"></label>

                 
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ValidFromDate" class="form-control border-0 shadow" />
                    <label asp-for="ValidFromDate" class="ms-2"></label>

                  
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Discount" class="form-control border-0 shadow" />
                    <label asp-for="Discount" class="ms-2"></label>

                   
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="MinCartAmount" class="form-control border-0 shadow" />
                    <label asp-for="MinCartAmount" class="ms-2"></label>

                   
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="MaxCartAmount" class="form-control border-0 shadow" />
                    <label asp-for="MaxCartAmount" class="ms-2"></label>

                   
                </div>





                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger from-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Coupon" asp-action="Index" class="btn btn-outline-secondary border from-control">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}






